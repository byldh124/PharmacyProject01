<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 다이얼로그 -->
    <style name="DialogTheme">
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/red_light01</item>
    </style>

    <style name="DefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cafe24_surround</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextBgGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit_gray01</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textColor">@color/gray_dark01</item>
        <item name="android:textColorHint">@color/gray_light01</item>
    </style>
</resources>